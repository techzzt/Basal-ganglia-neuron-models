{
    "neurons": [
        {
            "name": "Cortex",
            "N": 100, 
            "neuron_type": "poisson",
            "target_rates": {
                "STN": {
                    "equation": "170*Hz + (t >= 200*ms) * (t < 400*ms) * 250*Hz + 3*Hz * randn()"
                },
                "FSN": {
                    "equation": "646*Hz + (t >= 200*ms) * (t < 400*ms) * 787*Hz"
                }
            }
        },

        {
            "name": "FSN",
            "N": 510,
            "params_file": "./params_ref/FSN_1_nor.json",
